<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--tools:showIn="@layout/fragment_friend_list"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lbldoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:lines="1"
                android:maxLines="1"
                android:text="Dr. Liendre"
                android:textAlignment="textStart"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/lblspecialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:lines="1"
                android:maxLines="1"
                android:text="Specialty: Everything"
                android:textAlignment="textStart"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/lbltrust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:lines="1"
                android:maxLines="1"
                android:text="Trust: "
                android:textAlignment="textStart"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/lblreputation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Reputation: "
                android:layout_marginTop="3dp"
                android:textIsSelectable="true"
                android:textAlignment="textStart"
                android:textSize="11dp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="20dp" />
</LinearLayout>